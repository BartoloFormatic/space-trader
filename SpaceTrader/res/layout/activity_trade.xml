<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/trade_leave"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="@string/trade_leave" 
            android:onClick="gotoPlanet"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/trade_cash_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trade_cash_text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/trade_capacity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trade_capacity_text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/trade_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/trade_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >



        <TextView
            android:id="@+id/name_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temp_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <Button
                android:id="@+id/buy_temp"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:text="@string/temp_buy"
                android:onClick="buy"/>


            <Button
                android:id="@+id/sell_temp"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/temp_sell" 
                android:onClick="sell"/>

        </LinearLayout>

    </LinearLayout>    

    <ListView
        android:id="@+id/trade_list"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:entries="@array/trade_list" >
    </ListView>

</LinearLayout>